{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"files": {
		"include": ["src", "vite.config.js"],
		"ignore": ["src/client/dist/**/*"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
