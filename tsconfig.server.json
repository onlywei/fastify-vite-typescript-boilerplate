{
	"compilerOptions": {
		"allowJs": false,
    "allowSyntheticDefaultImports": true,
		"composite": true,
		"lib": ["es2022"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": false,
		"outDir": "dist",
		"removeComments": true,
		"rootDir": "src",
    "skipLibCheck": true,
		"sourceMap": true,
    "strict": true,
		"target": "es2022",
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["src/**/*"],
	"exclude": ["src/client/**/*"]
}
